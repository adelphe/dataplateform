        "sliceName": "Total Revenue KPI"
      }
    },
    "CHART-KPI-2": {
      "type": "CHART",
      "id": "CHART-KPI-2",
      "meta": {
        "width": 4,
        "height": 30,
        "chartId": null,
        "sliceName": "Total Transactions KPI"
      }
    },
    "CHART-LINE-1": {
      "type": "CHART",
      "id": "CHART-LINE-1",
      "meta": {
        "width": 6,
        "height": 50,
        "chartId": null,
        "sliceName": "Daily Revenue Trend"
      }
    },
    "CHART-AREA-1": {
      "type": "CHART",
      "id": "CHART-AREA-1",
      "meta": {
        "width": 6,
        "height": 50,
        "chartId": null,
        "sliceName": "Transaction Volume"
      }
    }
  },
  "metadata": {
    "color_scheme": "supersetColors",
    "refresh_frequency": 0,
    "expanded_slices": {},
    "label_colors": {},
    "shared_label_colors": {},
    "cross_filters_enabled": true,
    "native_filter_configuration": [
      {
        "id": "NATIVE_FILTER-DATE_RANGE",
        "name": "Date Range",
        "filterType": "filter_time",
        "targets": [{"datasetId": null}],
        "defaultDataMask": {
          "filterState": {
            "value": "Last month"
          }
        },
        "scope": {
          "rootPath": ["ROOT_ID"],
          "excluded": []
        }
      }
    ]
  },
  "charts": [
    {
      "slice_name": "Total Revenue KPI",
      "viz_type": "big_number_total",
      "datasource": "mart_daily_summary",
      "params": {
        "viz_type": "big_number_total",
        "metric": {
          "label": "total_revenue",
          "expressionType": "SQL",
          "sqlExpression": "SUM(total_revenue)"
        },
        "subheader": "Total Revenue",
        "y_axis_format": "$,.2f",
        "header_font_size": 0.4,
        "subheader_font_size": 0.15
      }
    },
    {
      "slice_name": "Total Transactions KPI",
      "viz_type": "big_number_total",
      "datasource": "mart_daily_summary",
      "params": {
        "viz_type": "big_number_total",
        "metric": {
          "label": "total_transactions",
          "expressionType": "SQL",
          "sqlExpression": "SUM(total_transactions)"
        },
        "subheader": "Total Transactions",
        "y_axis_format": ",d",
        "header_font_size": 0.4,
        "subheader_font_size": 0.15
      }
    },
    {
      "slice_name": "Daily Revenue Trend",
      "viz_type": "echarts_timeseries_line",
      "datasource": "mart_daily_summary",
      "params": {
        "viz_type": "echarts_timeseries_line",
        "x_axis": "date",
        "time_grain_sqla": "P1D",
        "metrics": [
          {
            "label": "daily_revenue",
            "expressionType": "SQL",
            "sqlExpression": "SUM(total_revenue)"
          }
        ],
        "groupby": [],
        "color_scheme": "supersetColors",
        "show_legend": true,
        "rich_tooltip": true,
        "tooltipTimeFormat": "%Y-%m-%d",
        "x_axis_title": "Date",
        "y_axis_title": "Revenue ($)",
        "y_axis_format": "$,.0f",
        "markerEnabled": true,
        "markerSize": 6
      }
    },
    {
      "slice_name": "Transaction Volume",
      "viz_type": "echarts_area",
      "datasource": "mart_daily_summary",
      "params": {
        "viz_type": "echarts_area",
        "x_axis": "date",
        "time_grain_sqla": "P1D",
        "metrics": [
          {
            "label": "transactions",
            "expressionType": "SQL",
            "sqlExpression": "SUM(total_transactions)"
          }
        ],
        "groupby": [],
        "color_scheme": "bnbColors",
        "show_legend": true,
        "opacity": 0.7,
        "x_axis_title": "Date",
        "y_axis_title": "Transactions",
        "y_axis_format": ",d",
        "stack": false
      }
    },
    {
      "slice_name": "Daily Metrics Table",
      "viz_type": "table",
      "datasource": "mart_daily_summary",
      "params": {
        "viz_type": "table",
        "query_mode": "raw",
        "columns": ["date", "total_revenue", "total_transactions", "unique_customers", "avg_transaction_value"],
        "row_limit": 30,
        "order_by_cols": ["[\"date\", false]"],
        "include_search": true,
        "page_length": 10,
        "table_timestamp_format": "%Y-%m-%d",
        "show_cell_bars": false
      }
    }
  ],
  "dataset": {
    "table_name": "mart_daily_summary",
    "schema": "marts",
    "database": "postgres_warehouse",
    "description": "Daily summary mart with revenue, transactions, and operational metrics",
    "columns": [
      {"column_name": "date", "type": "DATE", "is_dttm": true, "description": "Summary date"},
      {"column_name": "total_revenue", "type": "NUMERIC", "is_dttm": false, "description": "Total revenue for the day"},
      {"column_name": "total_transactions", "type": "INTEGER", "is_dttm": false, "description": "Number of transactions"},
      {"column_name": "unique_customers", "type": "INTEGER", "is_dttm": false, "description": "Number of unique customers"},
      {"column_name": "avg_transaction_value", "type": "NUMERIC", "is_dttm": false, "description": "Average transaction value"},
      {"column_name": "total_units_sold", "type": "INTEGER", "is_dttm": false, "description": "Total units sold"}
    ],
    "metrics": [
      {"metric_name": "sum_daily_revenue", "expression": "SUM(total_revenue)", "description": "Sum of daily revenue"},
      {"metric_name": "sum_transactions", "expression": "SUM(total_transactions)", "description": "Sum of transactions"},
      {"metric_name": "avg_daily_revenue", "expression": "AVG(total_revenue)", "description": "Average daily revenue"},
      {"metric_name": "avg_daily_transactions", "expression": "AVG(total_transactions)", "description": "Average daily transactions"}
    ]
  }
}
