{
  "dashboard_title": "Daily Operations",
  "description": "Operational dashboard for daily revenue, transactions, and key metrics",
  "slug": "daily-operations",
  "position_json": {
    "DASHBOARD_VERSION_KEY": "v2",
    "ROOT_ID": {
      "type": "ROOT",
      "id": "ROOT_ID",
      "children": ["GRID_ID"]
    },
